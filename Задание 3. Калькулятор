#include <iostream>
#include <string>
#include <sstream>

using namespace std;

int main() {
    setlocale(LC_ALL, "RU");
    string operation;
    double firstNum, secondNum; 
    char sign;

    cout << "Enter what would u do(+, -, /, *): ";

    stringstream temp_stream(operation);
    temp_stream >> firstNum >> sign >> secondNum;

    double result = firstNum + sign + secondNum;
    cout << result;
}
